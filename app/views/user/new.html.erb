<h1 class="text-center"><u>Utiliser le Form html pour créer un nouveau profil</u></h1>


<form action="create" method="POST">
    <div class="container" >
    Ton blaze</br>
        <input type="text" name="username"></br>

    Ton email</br>
        <input type="text" name="email"></br>

    Ta bio</br>
        <input type="text" name="bio"></br>

        <input type="submit" value="Submit">
    </div>
</form>

<h1 class="text-center"><u>Utiliser le Form tag pour créer un nouveau profil</u></h1>

<%= form_tag url_for(action: 'create'), method: "user" do %>
    <div class="container" >
      <%= label_tag 'Ton blaze' %>
      <%= text_field_tag 'username', @user.username %>
      <br /> <br />

      <%= label_tag 'Ton email' %>
      <%= text_area_tag 'email', @user.email %>
      <br /> <br />

      <%= label_tag 'Ta bio' %>
      <%= text_field_tag 'bio', @user.bio %>
      <br /> <br />

      <%= submit_tag "Submit" %>
    </div>
<% end %>

<h1 class="text-center"><u>Utiliser le Form for pour créer un nouveau profil</u></h1> <br>

<%= form_for @user, url: {action: "create"} do |f| %>
    <div class="container" >
        Ton blaze: <%= f.text_field :username, class: "form-control" %>
          <br /> <br />
        Ton email : <%= f.text_field :email, class: "form-control" %>
        <br /> <br />
        Ta bio : <%= f.text_area :bio, class: "form-control" %>
        <br /> <br />
        <%= f.submit "Submit"%>
    </div>
<% end %>
